@model OnboadingTask.Models.Customer

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>


    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    

</head>
<body>
    <h2>Customer Details</h2>
    <div class="container">


        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="clearTextBox();" style="border:none">
            Add New Customer
        </a>

        <table id="tblStudent" class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Address
                    </th>
                    <th>

                    </th>
            </thead>
            <tbody class="tbody"></tbody>


        </table>


        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="padding:35px 50px;">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><span class="glyphicon glyphicon-lock"></span>Customer Details</h4>
                    </div>
                    <div class="modal-body" style="padding:40px 50px;">
                        <form role="form">
                            <div class="form-group">
                                <label for="Id">Id</label>
                                <input type="text" class="form-control" id="Id" placeholder="Id">
                            </div>

                            <div class="form-group">
                                <label for="Name">Name</label>
                                <input type="text" class="form-control" id="Name" placeholder="Name" data-bind='value: txtName'>
                                <p>   <span class="" data-bind="validationMessage: test"></span></p>

                            </div>

                            <div class="form-group">
                                <label for="Address">Address</label>
                                <input type="text" class="form-control" id="Address" placeholder="Address" data-bind='value: txtAddress'>

                            </div>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary" data-bind="click:Add" value="Add" id="btnAdd" onclick="return Add();">Add</button>
                                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update</button>
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            </div>
                             
                        </form>
                    </div>

                </div>

            </div>
        </div>
    </div>

    
